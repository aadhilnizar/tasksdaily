<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <h1>User List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.user_id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.password %></td>
                    <td><button name="btn" class="btn "><a href="/users/delete/<%= user.user_id%>" title="folder icons" onclick="return alertFunction()">Delete</a></button></td>
                    <td><button name="btn" class="btn "><a href="/users/edit/<%= user.user_id%>" title="folder icons" ">Edit</a></button></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <script>
        function alertFunction()  {
          if ( confirm('Are you sure ?') == true){
            return true;
        } else {
            return false;
        }
    }
    </script>
</body>
</html>
